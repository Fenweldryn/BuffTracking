<GuiXml>
    <Font name="SibtFont" font="$(BOLD_FONT)|18|shadow" />
    <Font name="SibtFontSmall" font="$(BOLD_FONT)|12|outline" />

    <Controls>
        <Control name="Sibt_Effect" mouseEnabled="true" virtual="true">
            <Dimensions x="36" y="36" />

            <OnMouseDown>
                self:GetParent():StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:GetParent():StopMovingOrResizing()
            </OnMouseUp>
            <OnMouseEnter>
                Sibt_Effect_OnMouseEnter(self)
            </OnMouseEnter>
            <OnMouseExit>
                Sibt_Effect_OnMouseExit(self)
            </OnMouseExit>
            <OnUpdate>
                Sibt_Effect_OnUpdate(self)
            </OnUpdate>

            <Controls>
                <Label name="$(parent)Time" font="SibtFont" horizontalAlignment="CENTER">
                    <Anchor point="CENTER" />
                </Label>

                <Label name="$(parent)Count" font="SibtFontSmall" horizontalAlignment="RIGHT">
                    <Anchor point="BOTTOMRIGHT" offsetX="-4" />
                </Label>

                <Texture name="$(parent)Highlight" layer="OVERLAY" level="10" textureFile="esoui/art/ava/ava_itemhighlight_precision.dds" color="INTERFACE_COLOR_TYPE_GENERAL:INTERFACE_GENERAL_COLOR_ERROR" alpha="0.8" hidden="true">
                    <Dimensions x="34" y="34" />
                    <Anchor point="CENTER" />
                </Texture>

                <!-- <Texture name="$(parent)Shadow" layer="OVERLAY" textureFile="esoui/art/ava/ava_itemhighlight_precision.dds" color="000000">
                    <Dimensions x="34" y="34" />
                    <Anchor point="CENTER" />
                </Texture> -->

                <Texture name="$(parent)Icon" layer="1">
                    <Dimensions x="34" y="34" />
                    <Anchor point="CENTER" />
                </Texture>

                <!-- <Backdrop name="$(parent)Frame" layer="OVERLAY">
                    <AnchorFill />
                    <Center file="esoui/art/uicombatoverlay/uicombatoverlaycenter.dds" />
                    <Edge file="EsoUI/Art/WorldMap/worldmap_frame_edge.dds" edgeFileWidth="128" edgeFileHeight="16" />
                    <Insets left="16" top="16" right="-16" bottom="-16" />
                </Backdrop> -->

                <Texture name="$(parent)Frame" textureFile="esoui/art/miscellaneous/colorpicker_swatchframe.dds" layer="BACKGROUND">
                    <AnchorFill />
                </Texture>
            </Controls>
        </Control>

        <Control name="Sibt_EffectsBar" mouseEnabled="true" resizeToFitDescendents="true" virtual="true">
            <Dimensions x="36" y="36" />
            <Anchor point="BOTTOM" relativePoint="TOP" offsetY="-2" />
        </Control>
    </Controls>
</GuiXml>
