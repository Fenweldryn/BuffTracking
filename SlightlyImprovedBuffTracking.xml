<GuiXml>
    <Font name="SibtFont" font="$(BOLD_FONT)|16|soft-shadow-thick" />

    <Controls>
        <Control name="Sibt_Effect" mouseEnabled="true" virtual="true">
            <Dimensions x="36" y="36" />

            <OnMouseDown>
                self:GetParent():StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:GetParent():StopMovingOrResizing()
            </OnMouseUp>
            <OnMouseEnter>
                Sibt_Effect_OnMouseEnter(self)
            </OnMouseEnter>
            <OnMouseExit>
                Sibt_Effect_OnMouseExit(self)
            </OnMouseExit>
            <OnUpdate>
                Sibt_Effect_OnUpdate(self)
            </OnUpdate>

            <Controls>
                <Label name="$(parent)Time" font="SibtFont" horizontalAlignment="CENTER">
                    <Anchor point="CENTER" />
                </Label>

                <Texture name="$(parent)Highlight" layer="OVERLAY" level="10" textureFile="esoui/art/ava/ava_itemhighlight_precision.dds" color="FF0000" alpha="0.8" hidden="true">
                    <Dimensions x="32" y="32" />
                    <Anchor point="CENTER" />
                </Texture>

                <Texture name="$(parent)Shadow" layer="OVERLAY" level="8" textureFile="esoui/art/ava/ava_itemhighlight_precision.dds" color="000000" alpha="0.4">
                    <Dimensions x="32" y="32" />
                    <Anchor point="CENTER" />
                </Texture>

                <Texture name="$(parent)Icon" layer="1">
                    <Dimensions x="32" y="32" />
                    <Anchor point="CENTER" />
                </Texture>

                <Backdrop name="$(parent)Frame" inherits="ZO_DefaultBackdrop">
                    <AnchorFill />
                </Backdrop>

                <!-- <Texture name="$(parent)Frame" layer="BACKGROUND" textureFile="esoui/art/actionbar/abilityframe64_up.dds">
                    <AnchorFill />
                </Texture> -->
            </Controls>
        </Control>

        <Control name="Sibt_EffectsBar" mouseEnabled="true" resizeToFitDescendents="true" virtual="true">
            <Dimensions x="36" y="36" />
            <Anchor point="BOTTOM" relativePoint="TOP" offsetY="-2" />
        </Control>
    </Controls>
</GuiXml>
